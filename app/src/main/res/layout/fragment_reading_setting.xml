<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leon.counter_reading.fragments.reading_setting.ReadingSettingFragment">

    <TextView
        android:id="@+id/text_view_not_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/data_not_found"
        android:textColor="@color/red"
        android:visibility="gone"
        android:textSize="@dimen/text_size_large" />

    <CheckBox
        android:id="@+id/check_box_paging_rotation"
        style="@style/CheckBox.Possible"
        android:layout_margin="@dimen/low_dp"
        android:text="@string/paging_rtl" />
    <ListView
        android:id="@+id/listViewRead"
        android:layout_below="@id/check_box_paging_rotation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/low_dp"
        android:divider="@null"
        android:dividerHeight="@dimen/low_dp"
        tools:listitem="@layout/item_reading_setting_2" />
</RelativeLayout>