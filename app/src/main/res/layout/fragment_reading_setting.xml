<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leon.counter_reading.fragments.reading_setting.ReadingSettingFragment">

    <TextView
        android:id="@+id/text_view_not_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/data_not_found"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_large"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/check_box_paging_rotation"
        style="@style/CheckBox.Possible"
        android:layout_width="wrap_content"
        android:text="@string/paging_rtl" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/low_dp"
        android:layout_marginTop="@dimen/medium_dp"
        android:layout_marginEnd="@dimen/low_dp"
        android:padding="@dimen/low_dp"
        android:src="@drawable/mode_dark" />

    <RadioGroup
        android:id="@+id/radio_group_keyboard"
        style="@style/CheckBox.Possible"
        android:layout_below="@id/check_box_paging_rotation"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_button_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/gray"
            android:text="@string/standard_keyboard"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/text_size_medium" />

        <RadioButton
            android:id="@+id/radio_button_sensitive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/gray"
            android:text="@string/sensitive_keyboard"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/text_size_medium" />

    </RadioGroup>

    <ListView
        android:id="@+id/listViewRead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/radio_group_keyboard"
        android:layout_margin="@dimen/low_dp"
        android:divider="@null"
        android:dividerHeight="@dimen/low_dp"
        tools:listitem="@layout/item_reading_setting_2" />

</RelativeLayout>